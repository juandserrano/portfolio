---
import GitHub from "./icons/GitHub.astro";
import API from "./icons/API.astro";
import React from "./icons/React.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  MAPBOX: {
    name: "MapBox API",
    class: "bg-black text-white",
    icon: API,
  },
  GOOGLEMAPS: {
    name: "Google Maps API",
    class: "bg-black text-white",
    icon: API,
  },
  OPENWEATHERMAP: {
    name: "OpenWeatheMap API",
    class: "bg-black text-white",
    icon: API,
  },
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
};
const PROJECTS = [
  {
    title: "SweetStays",
    description: "AirBnB Clone.",
    link: "https://ss.juanserrano.net/",
    github: "https://github.com/juandserrano/sweetstays",
    image: "/projects/ssBig.png",
    tags: [TAGS.MAPBOX, TAGS.REACT],
  },
  {
    title: "Moober",
    description: "Uber-type app.",
    link: "https://moober.juanserrano.net",
    github: "https://github.com/juandserrano/moober-react",
    image: "/projects/mooberBig.png",
    tags: [TAGS.GOOGLEMAPS, TAGS.REACT],
  },
  {
    title: "Serra",
    description: "Music player built in React.",
    link: "https://music.juanserrano.net",
    github: "https://github.com/juandserrano/serra-music-app",
    image: "/projects/musicBig.png",
    tags: [TAGS.REACT],
  },
  {
    title: "Weather",
    description: "Simple weather app.",
    link: "https://weather.juanserrano.net",
    github: "https://github.com/juandserrano/weatherapp_pwa",
    image: "/projects/weatherBig.png",
    tags: [TAGS.OPENWEATHERMAP, TAGS.REACT],
  },
];
---

<section class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              View source
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Go to website
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
